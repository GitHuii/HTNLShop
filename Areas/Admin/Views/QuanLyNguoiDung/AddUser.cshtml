@model HTNLShop.Data.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>AddUser</h1>
<h4>User</h4>
<hr />

<div class="row">
    <!-- Form bên trái -->
    <div class="col-sm-12 col-xl-6">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Thêm sản phẩm mới</h6>

            <form method="post" asp-action="AddUser" enctype="multipart/form-data">
                <div class="form-floating mb-3">
                    <input asp-for="FullName" class="form-control" placeholder="Họ Tên" />
                    <label asp-for="FullName">Họ Tên</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <label asp-for="Email">Giá</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Số Điện Thoại" />
                    <label asp-for="PhoneNumber">Số Điện Thoại</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Address" class="form-control" placeholder="Địa Chỉ" />
                    <label asp-for="Address">Địa Chỉ</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Tài Khoản" />
                    <label asp-for="Username">Tài Khoản</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Mật Khẩu" />
                    <label asp-for="Password">Mật Khẩu</label>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="RoleId" class="form-select" asp-items="ViewBag.RoleId">
                    </select>
                    <label asp-for="RoleId">Vai Trò</label>
                </div>

                <button type="submit" class="btn btn-primary">Thêm Người Dùng</button>
            </form>
        </div>
    </div>

