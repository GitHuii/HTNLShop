@model IEnumerable<HTNLShop.ViewModels.DanhMucVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Categories</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="SanPham" asp-action="Index" asp-route-id="@item.MaDanhMuc">
                            <i class="fas fa-apple-alt me-2"></i>@item.TenDanhMuc
                        </a>
                        <span>(3)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>