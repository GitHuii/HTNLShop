@model IEnumerable<HTNLShop.ViewModels.CategoryVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="SanPham" asp-action="Index" asp-route-id="@item.CategoryId">
                            <i class="fas fa-apple-alt me-2"></i>@item.CategoryName
                        </a>
                        <span>(@item.ProductCount)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>