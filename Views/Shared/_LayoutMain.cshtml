<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
	@RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <!-- Navbar start -->
        <div class="container-fluid fixed-top">
            <div class="container topbar bg-primary d-none d-lg-block">
                <div class="d-flex justify-content-between">
                    <div class="top-info ps-2">
                        <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">123 Street, New York</a></small>
                        <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">Email@Example.com</a></small>
                    </div>
                    <div class="top-link pe-2">
                        <a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
                        <a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
                        <a href="#" class="text-white"><small class="text-white ms-2">Sales and Refunds</small></a>
                    </div>
                </div>
            </div>
            <div class="container px-0">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">
                    <a href="index.html" class="navbar-brand"><h1 class="text-primary display-6">HTNL.Shop</h1></a>
                    <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars text-primary"></span>
                    </button>
                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                        <div class="navbar-nav mx-auto">
                            <a asp-controller="TrangChu" asp-action="Index" class="nav-item nav-link active">Trang Chủ</a>  <!--href="index.html"-->
                            <a asp-controller="SanPham" asp-action="Index" class="nav-item nav-link">Sản Phẩm</a>
                            <a asp-controller="Cart" asp-action="Index" class="nav-item nav-link">Giỏ Hàng</a>
                            <a asp-controller="Cart" asp-action="CheckOut" class="nav-item nav-link">Checkout</a>
                            <a asp-controller="DanhGia" asp-action="DanhGia" class="nav-item nav-link">Đánh Giá</a> <!--href="testimonial.html"-->
                            <a asp-controller="LienHe" asp-action="LienHe" class="nav-item nav-link">Liên Hệ</a>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Customer" asp-action="Register" class="nav-item nav-link">Đăng kí</a>
                            }
                        </div>
                        <div class="d-flex m-3 me-0">
                            <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
                            @* <a asp-controller="Cart" asp-action="Index" class="position-relative me-4 my-auto">
                                <i class="fa fa-shopping-bag fa-2x"></i>
                                <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">3</span>
                            </a> *@
                            @await Component.InvokeAsync("Cart")
                            @if(User.Identity.IsAuthenticated)
                            {
                                <div class="dropdown">
                                    <a class="my-auto dropdown-toggle text-decoration-none text-dark" href="#" role="button" id="userMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user fa-2x"></i>
                                        <span class="ms-2">@User.Identity.Name</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuLink">
                                        <li><a class="dropdown-item" asp-controller="Customer" asp-action="Profile">Hồ Sơ</a></li>
                                        <li><a class="dropdown-item" asp-controller="Customer" asp-action="Logout">Đăng Xuất</a></li>
                                    </ul>
                                </div>
                            }
                            else{
                            <a asp-action="Login" asp-controller="Customer" class="my-auto"> 
                            @* <a asp-controller="Customer" asp-action="Login"
                               asp-route-returnurl="@(Context.Request.Path + Context.Request.QueryString)">
                                Đăng nhập
                            </a> *@
                           
                                <i class="fas fa-user fa-2x"></i>
                            </a>
                            }
                            @* {
                                var currentPath = Context.Request.Path.HasValue ? Context.Request.Path.Value : "/";
                                var currentQuery = Context.Request.QueryString.HasValue ? Context.Request.QueryString.Value : "";
                                var currentFull = (currentPath ?? "/") + (currentQuery ?? "");
                                bool includeReturn = !string.IsNullOrWhiteSpace(currentPath)
                                && currentPath != "/"
                                && !currentPath.Equals(Url.Action("Login", "Customer"), StringComparison.OrdinalIgnoreCase)
                                && !currentPath.StartsWith(Url.Action("Login", "Customer") + "?", StringComparison.OrdinalIgnoreCase);
                            }
                            ...
                            @if (includeReturn)
                            {
                                <a asp-controller="Customer" asp-action="Login"
                                   asp-route-returnurl="@(currentFull)"
                                   class="my-auto d-flex align-items-center text-decoration-none">
                                    <i class="fas fa-user fa-2x me-2"></i>
                                    <span>Đăng nhập</span>
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Customer" asp-action="Login"
                                   class="my-auto d-flex align-items-center text-decoration-none">
                                    <i class="fas fa-user fa-2x me-2"></i>
                                    <span>Đăng nhập</span>
                                </a>
                            } *@
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Navbar End -->
        <!-- Modal Search Start -->
        <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-fullscreen">
                <div class="modal-content rounded-0">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Tìm Kiếm Sản Phẩm</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body d-flex align-items-center">
                        <div class="input-group w-75 mx-auto d-flex">
                            <input id="searchText" type="search" class="form-control p-3" placeholder="Tìm Kiếm Sản Phẩm" aria-describedby="search-icon-1">
                            <span id="searchButton" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal Search End -->
    </header>
    <div style="margin-top: 120px;"></div>
    <div class="bg-light">
        @RenderBody()
    </div>

	@await Html.PartialAsync("_Footer")

	<!-- Back to Top -->
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

	@RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            $("#searchButton").click(function () {
                var query = $("#searchText").val();
                if (query) {
                    var url = "@Url.Action("Search", "SanPham")" + "?query=" + encodeURIComponent(query);
                    window.location.href = url;
                }
            });
		});
    </script>
</body>
</html>
