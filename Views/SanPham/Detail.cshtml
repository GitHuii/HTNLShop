@using HTNLShop.ViewModels

@model HTNLShop.ViewModels.ProductDetailVM
@{
    ViewData["Title"] = "Detail";
}


<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Chi Sản Phẩm</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Trang Chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Sản Phẩm</a></li>
        <li class="breadcrumb-item active text-white">@Model.ProductName</li>
    </ol>
</div>

<div class="container-fluid py-5 mt-5">
    <div class="container py-5">
        <div class="row g-4 mb-5">
            <div class="col-lg-8 col-xl-9">
                <div class="row g-4">
                    <div class="col-lg-6">
                        <div class="border rounded">
                            <a href="#">
                                <img src="~/Assets/img/Products/@Model.CategoryId/@(Model.ProductId).jpg" class="img-fluid rounded" alt="Image">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <h4 class="fw-bold mb-3">@Model.ProductName</h4>
                        <p class="mb-3">Danh Mục: @Model.CategoryName</p>
                        <h5 class="fw-bold mb-3">@string.Format("{0:N0}", @Model.Price) đ</h5>
                        <p class="mb-4">@Model.ProductDetail</p>
                 
                        <form asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.ProductId">
                        <div class="input-group quantity mb-5" style="width: 100px;">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-minus rounded-circle bg-light border" type="button">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control form-control-sm text-center border-0" value="1" name="quantity">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-plus rounded-circle bg-light border" type="button">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                            <button class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i>Thêm Vào Giỏ Hàng</button>
                        </form>
                    </div>

                    <div class="col-lg-12 mt-5">
                        <nav>
                            <div class="nav nav-tabs mb-3">
                                <button class="nav-link active border-white border-bottom-0"
                                        data-bs-toggle="tab" data-bs-target="#tab-des">
                                    Mô Tả
                                </button>
                                
                                <button class="nav-link border-white border-bottom-0"
                                        data-bs-toggle="tab" data-bs-target="#tab-review">
                                    Đánh Giá
                                </button>
                             
                            </div>
                        </nav>

                        <div class="tab-content mb-5">
                   
                            <div class="tab-pane fade show active" id="tab-des">
                                <p>@Model.ProductDetail</p>
                            </div>
                            <div class="tab-pane fade" id="tab-review">
                                <h4 class="fw-bold mb-4">Đánh Giá Sản Phẩm(@ViewBag.quantity)</h4>

                                <div class="mb-4">
                                    @await Html.PartialAsync("~/Views/Review/_ReviewForm.cshtml",
                                             new ReviewVM { ProductId = Model.ProductId })
                                </div>                           
                                <div id="reviewList">
                                    @await Html.PartialAsync("~/Views/Review/_ListReview.cshtml",
                                             Model.Reviews)
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-xl-3">
                <div class="row g-4 fruite">
                    <div class="col-lg-12">
                        <div class="input-group w-100 mx-auto d-flex mb-4">
                            <input type="search" class="form-control p-3" placeholder="Tìm kiếm" aria-describedby="search-icon-1">
                            <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                        </div>
						@await Component.InvokeAsync("Category")
                    </div>
                  
                </div>
            </div>
        </div>
        <h1 class="fw-bold mb-0">Sản Phẩm Cùng Danh Mục</h1>
        <div class="vesitable">
            <div class="owl-carousel vegetable-carousel justify-content-center">
                @foreach (var item in Model.SameCategoryProduct)
                {
                    <div class="border border-primary rounded position-relative vesitable-item">
                        <div class="vesitable-img">
                            <a asp-controller="SanPham" asp-action="Detail" asp-route-id="@item.ProductId">
                                <img src="~/Assets/img/Products/@item.CategoryId/@(item.ProductId).jpg" class="img-fluid w-100 rounded-top" alt="">
                            </a>
                        </div>
                        <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">@item.CategoryName</div>
                        <div class="p-4 pb-0 rounded-bottom">
                            <a asp-controller="SanPham" asp-action="Detail" asp-route-id="@item.ProductId">
                                <h4 class="truncate-title">@item.ProductName</h4>
                            </a>
                            <p class="truncate-detail">@item.ProductDetail</p>
                            <div class="d-flex justify-content-between flex-lg-wrap">
                                <p class="text-dark fs-5 fw-bold mb-0">@String.Format("{0:N0} đ", item.Price)</p>
                                <a asp-controller="SanPham" asp-action="Detail" asp-route-id="@item.ProductId" class="btn border border-secondary rounded-pill px-3 py-1 mb-4 text-primary">
                                    <i class="fa fa-shopping-bag me-2 text-primary"></i> Xem Sản Phẩm
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


