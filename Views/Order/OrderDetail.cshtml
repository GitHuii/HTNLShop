@model HTNLShop.ViewModels.OrderVM
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "_LayoutMain";
}
@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        .flat-card {
            border: 3px solid #1a1a1a;
            box-shadow: 5px 5px 0px #1a1a1a;
        }

        .flat-button {
            border: 2.5px solid #1a1a1a;
            box-shadow: 3px 3px 0px #1a1a1a;
            transition: all 0.1s;
        }

            .flat-button:hover {
                transform: translate(2px, 2px);
                box-shadow: 1px 1px 0px #1a1a1a;
            }

            .flat-button:active {
                transform: translate(3px, 3px);
                box-shadow: 0px 0px 0px #1a1a1a;
            }

        .flat-badge {
            border: 2px solid #1a1a1a;
        }

        .flat-image {
            border: 3px solid #1a1a1a;
        }
    </style>
}

<div class="bg-cyan-50 py-8">
    <div class="container mx-auto px-4">

        <!-- Back Button -->
        <div class="mb-6">
            <a href="@Url.Action("Index", "Order")" class="flat-button inline-flex items-center gap-2 px-6 py-3 bg-white text-black font-bold rounded-xl">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
                </svg>
                Quay lại
            </a>
        </div>

        <!-- Order Header -->
        <div class="bg-white flat-card rounded-2xl p-6 mb-6">
            <div class="flex flex-wrap justify-between items-start gap-4">
                <div>
                    <h1 class="text-3xl font-black text-gray-900 mb-2" style="font-family:'roboto' ,'sans-serif'">Đơn hàng #@Model.OrderCode</h1>
                    <p class="text-gray-600 font-semibold">📅 Ngày đặt: @Model.Date</p>
                </div>
                @{
                    var isDelivered = Model.Status.ToLower() == "Đã giao hàng";
                    var isPending = Model.Status.ToLower() == "pending";
                    var isShipped = Model.Status.ToLower() == "shipped";
                    var isCancelled = Model.Status.ToLower() == "cancelled";

                    var badgeColor = isDelivered ? "bg-green-300" :
                    isPending ? "bg-green-300" :
                    isShipped ? "bg-green-300" :
                    isCancelled ? "bg-green-300" :
                    "bg-green-300";

                    var statusText = isDelivered ? "Đã giao hàng" :
                    isPending ? "Đang xử lý" :
                    isShipped ? "Đã gửi hàng" :
                    isCancelled ? "Đã hủy" :
                    Model.Status;
                }
                <span class="flat-badge px-6 py-3 rounded-full text-lg font-black @badgeColor">
                    @statusText
                </span>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

            <!-- Products List -->
            <div class="lg:col-span-2">
                <div class="bg-white flat-card rounded-2xl p-6">
                    <h2 class="text-2xl font-black text-gray-900 mb-6" style="font-family:'roboto' ,'sans-serif'">Sản phẩm đã đặt</h2>

                    <div class="space-y-4">
                        @foreach (var item in Model.Items)
                        {
                            <div class="p-4 bg-gray-50 rounded-xl border-2 border-gray-900">
                                <div class="flex gap-5 mb-3">
                                    <img src="@item.Image"
                                         class="w-24 h-24 rounded-xl object-cover flat-image flex-shrink-0 bg-pink-100"
                                         alt="@item.ProductName"
                                         onerror="this.src='/Assets/img/default-product.png'" />
                                    <div class="flex-1 min-w-0">
                                        <h4 class="font-black text-gray-900 mb-2 text-lg">@item.ProductName</h4>
                                        <div class="flex items-center gap-4 mb-2">
                                            <span class="text-blue-600 font-black text-xl">@item.Price.ToString("N2") đ</span>
                                            <span class="text-gray-500 font-bold text-sm">x @item.Quantity</span>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-gray-600 text-xs font-bold mb-1">Thành tiền:</p>
                                            <p class="text-2xl font-black text-gray-900">@((item.Price * item.Quantity).ToString("N2")) đ</p>
                                        </div>
                                    </div>
                                </div>

                                
                                    <div class="flex justify-end pt-3 border-t-2 border-gray-200">
                                        <a href="@Url.Action("Detail", "SanPham", new { id = item.ProductId })"
                                           class="flat-button px-5 py-2.5 bg-yellow-300 text-black font-bold rounded-xl flex items-center gap-2">
                                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                            </svg>
                                            Đánh giá sản phẩm
                                        </a>
                                    </div>
                                
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="lg:col-span-1">
                <div class="bg-white flat-card rounded-2xl p-6 sticky top-6">
                    <h2 class="text-2xl font-black text-gray-900 mb-6" style="font-family:'roboto' ,'sans-serif'">Tổng quan đơn hàng</h2>

                    <!-- Shipping Address -->
                    <div class="mb-6 p-4 bg-blue-50 rounded-xl border-2 border-gray-900">
                        <h3 class="font-black text-gray-900 mb-2 flex items-center gap-2" style="font-family:'roboto' ,'sans-serif'">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            Địa chỉ giao hàng
                        </h3>
                        <p class="text-gray-700 font-semibold">@Model.ShippingAddress</p>
                    </div>

                    <!-- Price Summary -->
                    <div class="space-y-3 mb-6">
                        @{
                            var subtotal = Model.Items.Sum(i => i.Price * i.Quantity);
                            var shipping = 0m; // Phí ship = 0
                        }
                        <div class="flex justify-between items-center pb-3 border-b-2 border-gray-200">
                            <span class="text-gray-600 font-bold">Tạm tính:</span>
                            <span class="text-gray-900 font-black text-lg">@subtotal.ToString("N2") đ</span>
                        </div>
                        <div class="flex justify-between items-center pb-3 border-b-2 border-gray-200">
                            <span class="text-gray-600 font-bold">Phí vận chuyển:</span>
                            <span class="text-green-600 font-black text-lg">Miễn phí</span>
                        </div>
                        <div class="flex justify-between items-center pt-3">
                            <span class="text-gray-900 font-black text-xl" style="font-family:'roboto' ,'sans-serif'">Tổng cộng:</span>
                            <span class="text-blue-600 font-black text-3xl">@Model.Total.ToString("N2") đ</span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="space-y-3">
                        @if (!isCancelled && !isDelivered)
                        {
                            <button class="w-full flat-button px-6 py-3 bg-red-300 text-black font-bold rounded-xl flex items-center justify-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                                Hủy đơn hàng
                            </button>
                        }
                        <button class="w-full flat-button px-6 py-3 bg-pink-300 text-black font-bold rounded-xl flex items-center justify-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                            </svg>
                            Liên hệ hỗ trợ
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>