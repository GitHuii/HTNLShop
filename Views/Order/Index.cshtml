@section Scripts {
    <script>
        function filterOrders(status) {
            // Update active tab
            document.querySelectorAll('.filter-tab').forEach(tab => {
                if (tab.dataset.status === status) {
                    tab.classList.remove('bg-white', 'font-semibold');
                    tab.classList.add('bg-blue-400', 'font-bold');
                } else {
                    tab.classList.remove('bg-blue-400', 'font-bold');
                    tab.classList.add('bg-white', 'font-semibold');
                }
            });

            // Fetch filtered orders
            fetch(`@Url.Action("FilterOrders", "Order")?status=${status}`)
                .then(response => response.text())
                .then(html => {
                    document.getElementById('orders-container').innerHTML = html;
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi lọc đơn hàng');
                });
        }
    </script>
} *@

