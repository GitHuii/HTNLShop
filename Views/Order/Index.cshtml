@model IEnumerable<dynamic>  
@{
    ViewData["Title"] = "My Orders";
    Layout = "_LayoutMain";
}
@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }
        .flat-card {
            border: 3px solid #1a1a1a;
            box-shadow: 5px 5px 0px #1a1a1a;
        }
        .flat-button {
            border: 2.5px solid #1a1a1a;
            box-shadow: 3px 3px 0px #1a1a1a;
            transition: all 0.1s;
        }
        .flat-button:hover {
            transform: translate(2px, 2px);
            box-shadow: 1px 1px 0px #1a1a1a;
        }
        .flat-button:active {
            transform: translate(3px, 3px);
            box-shadow: 0px 0px 0px #1a1a1a;
        }
        .flat-tab {
            border: 2.5px solid #1a1a1a;
        }
        .flat-badge {
            border: 2px solid #1a1a1a;
        }
        .flat-image {
            border: 3px solid #1a1a1a;
        }
    </style>
}

<div class="bg-cyan-50 py-8">
    <div class="container mx-auto px-4">
        
        <!-- Filter Tabs -->
        <div class="bg-white flat-card rounded-2xl p-5 mb-6">
            <div class="flex flex-wrap gap-3">
                <button class="flat-tab px-6 py-3 bg-blue-400 text-black font-bold rounded-xl">
                    Tất cả
                </button>
                <button class="flat-tab px-6 py-3 bg-white text-black font-semibold rounded-xl hover:bg-gray-100">
                    Đang xử lý
                </button>
                <button class="flat-tab px-6 py-3 bg-white text-black font-semibold rounded-xl hover:bg-gray-100">
                    Đã gửi hàng
                </button>
                <button class="flat-tab px-6 py-3 bg-white text-black font-semibold rounded-xl hover:bg-gray-100">
                    Đã giao hàng
                </button>
                <button class="flat-tab px-6 py-3 bg-white text-black font-semibold rounded-xl hover:bg-gray-100">
                    Đã hủy
                </button>
            </div>
        </div>

        <!-- Orders List -->
        <div class="bg-white flat-card rounded-2xl p-6">
            <div class="mb-8">
                <h2 class="text-2xl font-black text-gray-900">Danh sách đơn hàng</h2>
                <p class="text-gray-600 font-medium mt-1">@Model.Count() đơn hàng</p>
            </div>

            @if (Model.Any())
            {
                <div class="space-y-5">
                    @foreach (var order in Model)
                    {
                        var isDelivered = order.Status == "Delivered";
                        var isPending = order.Status == "Pending";
                        var badgeColor = isDelivered ? "bg-green-300" : 
                                        isPending ? "bg-yellow-300" : 
                                        "bg-blue-300";
                        var statusText = isDelivered ? "Đã giao hàng" : isPending ? "Đang xử lý" : order.Status;
                        
                        <div class="bg-white flat-card rounded-2xl p-6">
                            <!-- Order Header -->
                            <div class="flex flex-wrap justify-between items-center gap-4 mb-5">
                                <div class="flex items-center gap-3">
                                    <div class="w-12 h-12 bg-orange-300 rounded-xl flex items-center justify-center text-2xl border-2 border-black">
                                        📦
                                    </div>
                                    <div>
                                        <h3 class="text-lg font-black text-gray-900">Order #@order.OrderCode</h3>
                                        <p class="text-gray-600 text-sm font-semibold mt-1">
                                            📅 @order.Date
                                        </p>
                                    </div>
                                </div>
                                <span class="flat-badge px-4 py-2 rounded-full text-sm font-black @badgeColor">
                                    @statusText
                                </span>
                            </div>

                            <!-- Product Info -->
                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-5 pb-5 border-b-3 border-gray-900">
                                <!-- Product Image & Details -->
                                <div class="lg:col-span-2 flex gap-5">
                                    <img src="@order.Image" 
                                         class="w-24 h-24 rounded-xl object-cover flat-image flex-shrink-0 bg-pink-100" 
                                         alt="@order.ProductName" />
                                    <div class="flex-1 min-w-0">
                                        <h4 class="font-black text-gray-900 mb-3 text-lg">@order.ProductName</h4>
                                        <div class="flex items-center gap-4">
                                            <span class="text-blue-600 font-black text-xl">$@order.Price</span>
                                            <span class="text-gray-500 font-bold text-sm">x 2</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Order Total -->
                                <div class="flex items-center justify-between lg:justify-end">
                                    <div class="text-left lg:text-right">
                                        <p class="text-gray-600 text-sm font-bold mb-2">Tổng thanh toán:</p>
                                        <p class="text-3xl font-black text-gray-900">$@order.Total</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Order Actions -->
                            <div class="flex flex-wrap justify-end gap-3">
                                @if (isDelivered)
                                {
                                    <button class="flat-button px-6 py-3 bg-yellow-300 text-black font-bold rounded-xl flex items-center gap-2">
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                                        </svg>
                                        Đánh giá
                                    </button>
                                }
                                <a href="#" class="flat-button px-6 py-3 bg-blue-400 text-black font-bold rounded-xl flex items-center gap-2">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-20">
                    <div class="w-40 h-40 bg-purple-200 rounded-3xl flex items-center justify-center mx-auto mb-6 border-3 border-black">
                        <svg class="w-24 h-24 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                    </div>
                    <h3 class="text-3xl font-black text-gray-900 mb-3">Chưa có đơn hàng nào</h3>
                    <p class="text-gray-600 font-semibold mb-8">Các đơn hàng của bạn sẽ hiển thị ở đây sau khi thanh toán</p>
                    <a href="#" class="inline-block flat-button px-8 py-4 bg-pink-300 text-black font-bold rounded-xl text-lg">
                        Bắt đầu mua sắm
                    </a>
                </div>
            }
        </div>
    </div>
</div