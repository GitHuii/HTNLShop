<script>

    $(function () {
        // helper: parse number from text like "1,234.56" or "1234"
        function parseNumber(txt) {
            if (txt === null || txt === undefined) return 0;
            // loại hết ký tự không phải số, dấu chấm, dấu phẩy, giữ dấu thập phân cuối cùng nếu có
            var cleaned = String(txt).replace(/[^0-9\.\,]/g, '');
            // chuyển dấu phẩy sang rỗng nếu có cả ',' và '.': giả sử ',' là thousands
            if (cleaned.indexOf(',') > -1 && cleaned.indexOf('.') > -1) {
                cleaned = cleaned.replace(/,/g, '');
            } else {
                // nếu chỉ có ',', chuyển thành '.'
                if (cleaned.indexOf(',') > -1 && cleaned.indexOf('.') === -1) {
                    cleaned = cleaned.replace(/,/g, '.');
                }
            }
            var n = parseFloat(cleaned);
            return isNaN(n) ? 0 : n;
        }

        // Lấy price từ hàng (fallback khi server không trả lineTotal)
        function getPriceFromRow($row) {
            // theo cấu trúc <tr> -> th(product) / td(name) / td(price) ...
            // price thường ở td index 1
            var txt = $row.find("td").eq(1).text() || $row.find("p.mb-0.mt-4").first().text();
            return parseNumber(txt);
        }

        // Cập nhật hiển thị subtotal / total ở nhiều chỗ
        function updateCartTotalUI(total) {
            var formatted = (total || 0).toLocaleString();
            // subtotal trên card (class cart-Subtotal)
            $(".cart-Subtotal").text(formatted);
            // phần total ở block phải (your p.mb-0.pe-4)
            $("p.mb-0.pe-4").text(formatted);
            // nếu bạn lỡ tạo 1 element id #subtotal hoặc #cart-total, cập nhật luôn (an toàn)
            $("#subtotal").text(formatted);
            $("#cart-total").text(formatted);
        }

        // Delegate events để an toàn khi xóa row
        $(document).on("click", ".increase-btn", function (e) {
            e.preventDefault();
            var id = $(this).data("id");
            var $row = $(this).closest("tr");

            $.ajax({
                url: "/Cart/IncreaseQuantity",
                type: "POST",
                data: { id: id },
                success: function (res) {
                    if (!res) return;

                    var qty = res.quantity ?? parseInt($("#qty-" + id).val() || 0) + 1;
                    // cập nhật input quantity
                    $("#qty-" + id).val(qty);

                    // lineTotal: ưu tiên server trả, nếu không có tự tính bằng price*qty
                    var lineTotal = (res.lineTotal !== undefined) ? res.lineTotal : (getPriceFromRow($row) * qty);
                    $(".cart-total-" + id).text(lineTotal.toLocaleString());

                    // total: ưu tiên server trả
                    var total = (res.total !== undefined) ? res.total : null;
                    if (total !== null) updateCartTotalUI(total);
                },
                error: function () {
                    alert("Lỗi khi tăng số lượng. Vui lòng thử lại.");
                }
            });
        });

        $(document).on("click", ".decrease-btn", function (e) {
            e.preventDefault();
            var id = $(this).data("id");
            var $row = $(this).closest("tr");

            $.ajax({
                url: "/Cart/DecreaseQuantity",
                type: "POST",
                data: { id: id },
                success: function (res) {
                    if (!res) return;

                    if (res.success === false) {
                        alert(res.message || "Không thể giảm số lượng.");
                        return;
                    }

                    var qty = res.quantity ?? parseInt($("#qty-" + id).val() || 0) - 1;
                    if (qty > 0) {
                        $("#qty-" + id).val(qty);
                        var lineTotal = (res.lineTotal !== undefined) ? res.lineTotal : (getPriceFromRow($row) * qty);
                        $(".cart-total-" + id).text(lineTotal.toLocaleString());
                    } else {
                        // remove row
                        $row.fadeOut(250, function () { $(this).remove(); });
                    }

                    if (res.total !== undefined) updateCartTotalUI(res.total);
                },
                error: function () {
                    alert("Lỗi khi giảm số lượng. Vui lòng thử lại.");
                }
            });
        });

        $(document).on("click", ".remove-btn", function (e) {
            e.preventDefault();
            var id = $(this).data("id");
            var $row = $(this).closest("tr");

            $.ajax({
                url: "/Cart/RemoveCart",
                type: "POST",
                data: { productId: id },
                success: function (res) {
                    if (!res) return;

                    if (res.success) {
                        $row.fadeOut(250, function () { $(this).remove(); });
                        if (res.total !== undefined) updateCartTotalUI(res.total);
                    } else {
                        alert(res.message || "Xóa sản phẩm thất bại!");
                    }
                },
                error: function () {
                    alert("Lỗi khi xóa sản phẩm. Vui lòng thử lại.");
                }
            });
        });

    });
</script>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            function setIncreaseButtonState(id, qty, maxStock) {
                var btn = $(".increase-btn[data-id='" + id + "']");
                if (!btn.length) return;
                if (maxStock && qty >= maxStock) {
                    btn.prop("disabled", true).addClass("disabled");
                } else {
                    btn.prop("disabled", false).removeClass("disabled");
                }
            }

            $(".increase-btn").click(function (e) {
                e.preventDefault();
                var btn = $(this);
                if (btn.prop("disabled")) return; // already disabled
                const id = btn.data("id");
                $.post("/Cart/IncreaseQuantity", { id: id }, function (res) {
                    if (res.success) {
                        $("#qty-" + id).val(res.quantity);
                        $(".cart-total-" + id).text(Number(res.lineTotal || 0).toLocaleString());
                        $("#subtotal").text(Number(res.total || 0).toLocaleString());
                        setIncreaseButtonState(id, res.quantity, res.maxStock);
                    } else {
                        // nếu bị chặn vì vượt tồn kho -> disable nút + và show message
                        if (res.maxStock) {
                            setIncreaseButtonState(id, res.quantity || 0, res.maxStock);
                            alert(res.message || "Không thể tăng thêm, đã đạt tồn kho tối đa.");
                        } else {
                            alert(res.message || "Cập nhật thất bại.");
                        }
                    }
                });
            });

            $(".decrease-btn").click(function (e) {
                e.preventDefault();
                const id = $(this).data("id");
                const row = $(this).closest("tr");
                $.post("/Cart/DecreaseQuantity", { id: id }, function (res) {
                    if (res.success) {
                        if (res.quantity > 0) {
                            $("#qty-" + id).val(res.quantity);
                            $(".cart-total-" + id).text(Number(res.lineTotal || 0).toLocaleString());
                            $("#subtotal").text(Number(res.total || 0).toLocaleString());
                            // enable + nếu trước đó bị disabled
                            setIncreaseButtonState(id, res.quantity, res.maxStock);
                        } else {
                            row.fadeOut(300, function () {
                                $(this).remove();
                                $("#subtotal").text(Number(res.total || 0).toLocaleString());
                            });
                        }
                    } else {
                        alert(res.message || "Cập nhật thất bại.");
                    }
                });
            });

             $(document).on("click", ".remove-btn", function (e) {
            e.preventDefault();
            var id = $(this).data("id");
            var $row = $(this).closest("tr");

            $.ajax({
                url: "/Cart/RemoveCart",
                type: "POST",
                data: { productId: id },
                success: function (res) {
                    if (!res) return;

                    if (res.success) {
                        $row.fadeOut(250, function () { $(this).remove(); });
                        if (res.total !== undefined) updateCartTotalUI(res.total);
                    } else {
                        alert(res.message || "Xóa sản phẩm thất bại!");
                    }
                },
                error: function () {
                    alert("Lỗi khi xóa sản phẩm. Vui lòng thử lại.");
                }
            });
        });

            // Optional: on load, try to get current maxStock for each item by calling a lightweight endpoint
