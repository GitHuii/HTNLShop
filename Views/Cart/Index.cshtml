@model IEnumerable<HTNLShop.ViewModels.CartItems>
@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "_LayoutMain";
}
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <div class="input-group w-75 mx-auto d-flex">
                        <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                        <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6">Cart</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Pages</a></li>
            <li class="breadcrumb-item active text-white">Cart</li>
        </ol>
    </div>
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Products</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Handle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                <div class="d-flex align-items-center">
                                        <img src="@item.Image" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="@item.ProductName">
                                </div>
                            </th>
                            <td>
                                <p class="mb-0 mt-4">
                                    <a asp-action="Detail" asp-controller="SanPham" asp-route-id="@item.ProductId">
                                    @item.ProductName
                                    </a>
                                </p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">@item.Price</p>
                            </td>
                            
                          
                            <td>
                                <div class="input-group quantity mt-4" style="width: 100px;">
                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border decrease-btn" data-id="@item.ProductId">
                                        <i class="fa fa-minus"></i>
                                    </button>

                                    <input type="text" id="qty-@item.ProductId" class="form-control form-control-sm text-center border-0" value="@item.Quantity" readonly>

                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border increase-btn" data-id="@item.ProductId">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </td>

                            
                            <td>
                     
                                <p class="mb-0 mt-4 cart-total-@item.ProductId">@item.Pay</p>
                            </td>
                           
                          
                                <td>
                          
                                <a href="#" class="btn btn-md rounded-circle bg-light border mt-4 remove-btn" data-id="@item.ProductId">
                                    <i class="fa fa-times text-danger"></i>
                                </a>
                                </td>
                            <td class="d-flex align-items-center gap-2 mt-4">
               
                                <a asp-action="BuyNow" asp-controller="Cart" asp-route-productId="@item.ProductId"
                                   asp-route-quantity="@item.Quantity";
                                    class="btn btn-sm btn-primary rounded-pill px-3 text-white">
                                    Mua ngay
                                </a>
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-5">
                <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" placeholder="Coupon Code">
                <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button">Apply Coupon</button>
            </div>
            <div class="row g-4 justify-content-end">
                <div class="col-8"></div>
                <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                    <div class="bg-light rounded">
                        <div class="p-4">
                            <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                            <div class="d-flex justify-content-between mb-4">
                                <h5 class="mb-0 me-4">Subtotal:</h5>
                            <p class="mb-0 cart-Subtotal">@Model.Sum(pr => pr.Pay)</p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <h5 class="mb-0 me-4">Shipping</h5>
                                <div class="">
                                    <p class="mb-0">Fee Ship: $0.00</p>
                                </div>
                            </div>
                            @* <p class="mb-0 text-end">Shipping to Ukraine.</p> *@
                        </div>
                        <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4 cart-Subbtotal">Total</h5>
                            <p class="mb-0 pe-4">@Model.Sum(pr => pr.Pay)</p>
                        </div>
                    <a asp-controller="Cart" asp-action="CheckOut" class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            function parseNumber(txt) {
                if (txt === null || txt === undefined) return 0;
                var cleaned = String(txt).replace(/[^0-9\.\,]/g, '');
                if (cleaned.indexOf(',') > -1 && cleaned.indexOf('.') > -1) {
                    cleaned = cleaned.replace(/,/g, '');
                } else if (cleaned.indexOf(',') > -1 && cleaned.indexOf('.') === -1) {
                    cleaned = cleaned.replace(/,/g, '.');
                }
                var n = parseFloat(cleaned);
                return isNaN(n) ? 0 : n;
            }

            function updateCartTotalUI(total) {
                var formatted = (total || 0).toLocaleString();
                $(".cart-Subtotal").text(formatted);
                $("p.mb-0.pe-4").text(formatted);
            }

            function setIncreaseButtonState(id, qty, maxStock) {
                var btn = $(".increase-btn[data-id='" + id + "']");
                if (!btn.length) return;
                if (maxStock && qty >= maxStock) {
                    btn.prop("disabled", true).addClass("disabled");
                } else {
                    btn.prop("disabled", false).removeClass("disabled");
                }
            }

            // Increase quantity
            $(document).on("click", ".increase-btn", function (e) {
                e.preventDefault();
                var btn = $(this);
                if (btn.prop("disabled")) return;
                const id = btn.data("id");

                $.post("/Cart/IncreaseQuantity", { id: id }, function (res) {
                    if (res.success) {
                        $("#qty-" + id).val(res.quantity);
                        $(".cart-total-" + id).text(Number(res.lineTotal || 0).toLocaleString());
                        updateCartTotalUI(res.total);
                        setIncreaseButtonState(id, res.quantity, res.maxStock);
                    } else {
                        if (res.maxStock) {
                            setIncreaseButtonState(id, res.quantity || 0, res.maxStock);
                        }
                        alert(res.message || "Không thể tăng thêm.");
                    }
                }).fail(function() {
                    alert("Lỗi khi tăng số lượng. Vui lòng thử lại.");
                });
            });

            // Decrease quantity
            $(document).on("click", ".decrease-btn", function (e) {
                e.preventDefault();
                const id = $(this).data("id");
                const row = $(this).closest("tr");

                $.post("/Cart/DecreaseQuantity", { id: id }, function (res) {
                    if (res.success) {
                        if (res.quantity > 0) {
                            $("#qty-" + id).val(res.quantity);
                            $(".cart-total-" + id).text(Number(res.lineTotal || 0).toLocaleString());
                            updateCartTotalUI(res.total);
                            setIncreaseButtonState(id, res.quantity, res.maxStock);
                        } else {
                            row.fadeOut(300, function () {
                                $(this).remove();
                                updateCartTotalUI(res.total);
                            });
                        }
                    } else {
                        alert(res.message || "Cập nhật thất bại.");
                    }
                }).fail(function() {
                    alert("Lỗi khi giảm số lượng. Vui lòng thử lại.");
                });
            });


            $(document).on("click", ".remove-btn", function (e) {
                e.preventDefault();
                const id = $(this).data("id");
                const row = $(this).closest("tr");

                $.post("/Cart/RemoveCart", { productId: id }, function (res) {
                    if (res.success) {
                        row.fadeOut(300, function () {
                            $(this).remove();
                            updateCartTotalUI(res.total);
                        });
                    } else {
                        alert(res.message || "Xóa sản phẩm thất bại!");
                    }
                }).fail(function() {
                    alert("Lỗi khi xóa sản phẩm. Vui lòng thử lại.");
                });
            });

        });
    </script>
}
}