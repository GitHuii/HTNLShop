@model HTNLShop.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container d-flex justify-content-center align-items-center py-5" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 rounded-4" style="width: 100%; max-width: 600px;">
        <div class="card-header bg-danger text-center py-3 rounded-top-4">
            <h3 class="mb-0 text-uppercase fw-bold text-white">Tạo tài khoản mới</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Register" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.Username" class="form-label fw-semibold">Tên đăng nhập <span class="text-danger">*</span></label>
                    <input asp-for="@Model.Username" class="form-control form-control-lg border-secondary" placeholder="Nhập tên đăng nhập">
                    <span asp-validation-for="@Model.Username" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label fw-semibold">Mật khẩu <span class="text-danger">*</span></label>
                    <input asp-for="@Model.Password" class="form-control form-control-lg border-secondary" placeholder="Nhập mật khẩu" type="password">
                    <span asp-validation-for="@Model.Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.FullName" class="form-label fw-semibold">Họ và tên</label>
                    <input asp-for="@Model.FullName" class="form-control form-control-lg border-secondary" placeholder="Nhập họ và tên">
                    <span asp-validation-for="@Model.FullName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Address" class="form-label fw-semibold">Địa chỉ <span class="text-danger">*</span></label>
                    <input asp-for="@Model.Address" class="form-control form-control-lg border-secondary" placeholder="Số nhà, đường, phường, quận...">
                    <span asp-validation-for="@Model.Address" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                    <input asp-for="@Model.Email" class="form-control form-control-lg border-secondary" placeholder="example@email.com" type="email">
                    <span asp-validation-for="@Model.Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="@Model.PhoneNumber" class="form-label fw-semibold">Số điện thoại <span class="text-danger">*</span></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control form-control-lg border-secondary" placeholder="Nhập số điện thoại">
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-danger btn-lg px-5 rounded-pill shadow-sm">
                        <i class="fa fa-user-plus me-2"></i> Đăng ký
                    </button>
                </div>
            </form>
        </div>

        <div class="card-footer text-center bg-light py-3 rounded-bottom-4">
            <small>Bạn đã có tài khoản? <a href="/Customer/Login" class="text-danger fw-semibold">Đăng nhập ngay</a></small>
        </div>
    </div>
</div>


