<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Sản Phẩm Bán Chạy</h1>
                </div>
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        @for (int i = 0; i < Model.Categories.Count; i++)
                        {
                            var category = Model.Categories[i];
                            <li class="nav-item">
                                <a class="d-flex m-2 py-2 bg-light rounded-pill @(i == 0 ? "active" : "")"
                                   data-bs-toggle="pill"
                                   href="#tab-@category.CategoryId">
                                    <span class="text-dark" style="width: 130px;">
                                        @category.CategoryName
                                    </span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="tab-content">
                @for (int i = 0; i < Model.Categories.Count; i++)
                {
                    var category = Model.Categories[i];
                    <div id="tab-@category.CategoryId"
                         class="tab-pane fade @(i == 0 ? "show active" : "") p-0">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <!-- Tiêu đề danh mục -->
                                <div class="mb-4">
                                    <h3 class="text-primary">
                                        🔥 Top Sản Phẩm Bán Chạy - @category.CategoryName
                                    </h3>
                                </div>

                                <div class="row g-4">
                                    @foreach (var product in category.TopProducts)
                                    {
                                        <div class="col-md-6 col-lg-4 col-xl-3">
                                            <div class="rounded position-relative fruite-item">
                                                <!-- Badge thứ hạng -->
                                                <div class="position-absolute" style="top: 10px; right: 10px; z-index: 10;">
                                                    <span class="badge bg-danger">
                                                        #@(category.TopProducts.IndexOf(product) + 1)
                                                    </span>
                                                </div>

                                                <!-- Hình ảnh -->
                                                <div class="fruite-img">
                                                    <a asp-controller="SanPham" asp-action="Detail" asp-route-id="@product.ProductId">
                                                        <img src="~/Assets/img/Products/@product.CategoryId/@(product.ProductId).jpg"
                                                             class="img-fluid w-100 rounded-top" alt="">
                                                    </a>
                                                </div>

                                                <!-- Tên danh mục -->
                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute"
                                                     style="top: 10px; left: 10px;">
                                                    @product.CategoryName
                                                </div>

                                                <!-- Thông tin sản phẩm -->
                                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                    <a asp-controller="SanPham" asp-action="Detail" asp-route-id="@product.ProductId">
                                                        <h4 class="truncate-title">@product.ProductName</h4>
                                                    </a>
                                                    <p class="truncate-detail">@product.ProductDetail</p>

                                                    <!-- Số lượng đã bán -->
                                                    <div class="mb-2">
                                                        <span class="badge bg-success">
                                                            <i class="fa fa-fire"></i> Đã bán: @product.TotalQuantitySold
                                                        </span>
                                                    </div>

                                                    <!-- Giá và nút mua -->
                                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <p class="text-dark fs-5 fw-bold mb-0">
                                                            @String.Format("{0:N0} đ", product.Price)
                                                        </p>
                                                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.ProductId"
                                                           class="btn border border-secondary rounded-pill px-3 text-primary">
                                                            <i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ hàng
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
